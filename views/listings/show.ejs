<% layout("/layout/boilerplate") %>
<script>
  const mapToken = "<%= process.env.MAP_TOKEN %>"
  const listing = <%- JSON.stringify(listing) %>;
</script>

<div class="container mt-4">
  <!-- Title -->
  <div class="row">
    <div class="col-12 col-lg-8 offset-lg-2">
      <h4 class="text-warning text-center text-lg-start">
        <%= listing.title %>
      </h4>
    </div>
  </div>

  <!-- Image Card -->
  <div class="row mt-3">
    <div class="col-12 col-lg-8 offset-lg-2">
      <div class="card shadow-sm">
        <img
          src="<%= listing.image.url %>"
          class="card-img-top img-fluid"
          alt="listing-image"
          style="max-height: 400px; object-fit: cover"
        />

        <div class="card-body">
          <p class="card-text">Owned By : <%= listing.owner.username %></p>
          <p class="card-text"><%= listing.description %></p>
          <p class="card-text">
            <b>&#8377; <%= listing.price.toLocaleString("en-IN") %></b>
          </p>
          <p class="card-text"><%= listing.location %></p>
        </div>
      </div>
    </div>
  </div>

  <!-- Action Buttons -->
  <% if(currUser && listing.owner._id.equals(currUser._id)) { %>
  <div class="row mt-3">
    <div class="col-12 col-lg-8 offset-lg-2 d-flex flex-wrap gap-2">
      <a
        href="/listings/<%= listing._id %>/edit"
        class="btn btn-primary flex-grow-1 flex-lg-grow-0"
      >
        Edit this Listing
      </a>

      <form
        method="POST"
        action="/listings/<%= listing._id %>?_method=DELETE"
        class="d-inline flex-grow-1 flex-lg-grow-0"
      >
        <button type="submit" class="btn btn-danger w-100 w-lg-auto">
          Delete this Listing
        </button>
      </form>
    </div>
  </div>
  <% } %>

  <!-- Divider -->
  <hr class="col-12 col-lg-8 offset-lg-2 my-4" />

  <!-- Review Form -->
  <% if(currUser) { %>
  <div class="row">
    <div class="col-12 col-lg-8 offset-lg-2">
      <h5>Leave a Review</h5>
      <form
        action="/listings/<%=listing._id %>/reviews"
        method="POST"
        novalidate
        class="needs-validation"
      >
        <div class="mb-3 mt-3">
          <label for="rating" class="form-label">Rating</label>
          <fieldset class="starability-slot">
            <input
              type="radio"
              id="no-rate"
              class="input-no-rate"
              name="review[rating]"
              value="1"
              checked
              aria-label="No rating."
            />
            <input
              type="radio"
              id="first-rate1"
              name="review[rating]"
              value="2"
            />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input
              type="radio"
              id="first-rate2"
              name="review[rating]"
              value="3"
            />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input
              type="radio"
              id="first-rate3"
              name="review[rating]"
              value="4"
            />
            <label for="first-rate3" title="Average">3 stars</label>
            <input
              type="radio"
              id="first-rate4"
              name="review[rating]"
              value="5"
            />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input
              type="radio"
              id="first-rate5"
              name="review[rating]"
              value="5"
            />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>
        </div>
        <div class="mb-3 mt-3">
          <label for="comment" class="form-label">Comments</label>
          <textarea
            name="review[comment]"
            id="comment"
            rows="5"
            class="form-control"
            style="border-radius: 8px"
            required
          ></textarea>
          <div class="invalid-feedback">
            Please add some comments for review
          </div>
        </div>
        <button class="btn btn-outline-dark">Submit</button>
      </form>
    </div>
  </div>
  <% } %>

  <!-- Reviews Section -->
  <div class="row mt-4">
    <div class="col-12 col-lg-8 offset-lg-2">
      <% if (listing.reviews.length > 0) { %>
      <h4 class="mb-4">All Reviews</h4>
      <div class="row">
        <% listing.reviews.forEach((review) => { %>
        <div class="col-12 col-md-6 mb-4">
          <div class="card shadow-sm h-100 border p-3">
            <div class="card-body">
              <h5 class="card-title text-primary">
                <%= review.author.username %>
              </h5>
              <p
                class="starability-result card-text"
                data-rating="<%= review.rating %>"
              ></p>
              <p class="card-text"><%= review.comment %></p>
            </div>
            <form
              action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
              method="POST"
            >
              <button class="btn btn-sm btn-dark">Delete</button>
            </form>
          </div>
        </div>
        <% }) %>
      </div>
      <% } else { %>
      <p class="text-muted">No reviews yet. Be the first to review!</p>
      <% } %>
    </div>
  </div>

  <!-- Map Section -->
  <hr class="col-12 col-lg-8 offset-lg-2 my-4" />
  <div class="row">
    <div class="col-12 col-lg-8 offset-lg-2">
      <h3 class="mb-3">Where You'll be</h3>
      <div
        id="map"
        style="
          width: 100%;
          height: 400px;
          border-radius: 10px;
          margin-bottom: 20px;
        "
      ></div>
    </div>
  </div>
</div>

<script src="/js/map.js"></script>
